<turbo-frame id="location_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900/60 px-4 py-6" data-controller="modal" data-action="keyup@window->modal#maybeClose">
    <div class="absolute inset-0" data-action="click->modal#close"></div>

    <div class="relative z-10 w-full max-w-2xl rounded-2xl bg-white p-6 shadow-xl">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Add Location</h2>
          <p class="text-sm text-gray-600">Capture a job site without leaving this order.</p>
        </div>
        <button class="text-gray-400 hover:text-gray-700" data-action="click->modal#close">
          <span class="sr-only">Close</span>
          âœ•
        </button>
      </div>

      <%= form_with model: @location, url: locations_path, class: "mt-6 space-y-4" do |f| %>
        <% if @location.errors.any? %>
          <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">
            <p class="font-semibold"><%= pluralize(@location.errors.count, "error") %> prevented this location from saving:</p>
            <ul class="mt-2 list-disc pl-4">
              <% @location.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :customer_id, "Customer", class: "text-sm font-medium text-gray-700" %>
          <%= f.collection_select :customer_id, @customers, :id, :display_name,
            { include_blank: "Select customer" },
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div>
          <%= f.label :label, "Location label", class: "text-sm font-medium text-gray-700" %>
          <%= f.text_field :label,
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div>
          <%= f.label :street, "Street address", class: "text-sm font-medium text-gray-700" %>
          <%= f.text_field :street,
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
          <div class="sm:col-span-2">
            <%= f.label :city, class: "text-sm font-medium text-gray-700" %>
            <%= f.text_field :city,
              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          </div>
          <div>
            <%= f.label :state, class: "text-sm font-medium text-gray-700" %>
            <%= f.text_field :state, maxlength: 2,
              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm uppercase text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <%= f.label :zip, class: "text-sm font-medium text-gray-700" %>
            <%= f.text_field :zip,
              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          </div>
          <div>
            <%= f.label :access_notes, "Access notes", class: "text-sm font-medium text-gray-700" %>
            <%= f.text_field :access_notes,
              class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          </div>
        </div>

        <div class="flex justify-end gap-3 pt-2">
          <button type="button"
            class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            data-action="click->modal#close">
            Cancel
          </button>
          <%= f.submit "Save location",
            class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
