<turbo-frame id="rate_plan_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900/60 px-4 py-6" data-controller="modal" data-action="keyup@window->modal#maybeClose">
    <div class="absolute inset-0" data-action="click->modal#close"></div>

    <div class="relative z-10 w-full max-w-lg rounded-2xl bg-white p-6 shadow-xl">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl                                        font-semibold text-gray-900">Add rate plan</h2>
          <p class="text-sm text-gray-600">Create a billing option without leaving this order.</p>
        </div>
        <button class="text-gray-400 hover:text-gray-700" data-action="click->modal#close">
          <span class="sr-only">Close</span>
          âœ•
        </button>
      </div>

      <%= form_with model: @rate_plan, url: rate_plans_path, class: "mt-6 space-y-4" do |f| %>
        <% if @rate_plan.errors.any? %>
          <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">
            <p class="font-semibold"><%= pluralize(@rate_plan.errors.count, "error") %> prevented this rate plan from saving:</p>
            <ul class="mt-2 list-disc pl-4">
              <% @rate_plan.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="rounded-2xl border border-gray-100 bg-gray-50 p-3">
          <p class="text-xs font-medium text-gray-500">Unit type</p>
          <p class="text-sm font-semibold text-gray-900"><%= @unit_type.name %></p>
        </div>
        <%= f.hidden_field :unit_type_id, value: @unit_type.id %>

        <div>
          <%= f.label :service_schedule, class: "text-sm font-medium text-gray-700" %>
          <%= f.select :service_schedule, RatePlan::SERVICE_SCHEDULES.values.map { |value| [value.humanize, value] },
            {},
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div>
          <%= f.label :billing_period, class: "text-sm font-medium text-gray-700" %>
          <%= f.select :billing_period, RatePlan::BILLING_PERIODS.map { |value| [value.humanize, value] },
            {},
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div>
          <%= f.label :price, "Price (USD)", class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :price,
            step: 0.01,
            min: 0,
            value: (@rate_plan.price_cents.to_f / 100.0 if @rate_plan.price_cents),
            class: "mt-1 block w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>

        <div class="flex justify-end gap-3 pt-2">
          <button type="button"
            class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            data-action="click->modal#close">
            Cancel
          </button>
          <%= f.submit "Save rate plan",
            class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
