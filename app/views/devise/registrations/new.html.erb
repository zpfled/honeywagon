<%= page_shell do %>
  <div class="mx-auto w-full max-w-md">
    <%= card classes: "space-y-4" do %>
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Create your account</h1>
        <p class="text-sm text-gray-600">Sign up to start managing your routes and inventory.</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :company_name, "Company name", class: "text-sm font-medium text-gray-700" %>
          <%= f.text_field :company_name, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm", placeholder: "Acme Sanitation" %>
        </div>

        <div>
          <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>

        <div>
          <%= f.submit "Sign up", class: button_classes(variant: :primary), data: { turbo: false } %>
        </div>
      <% end %>

      <div class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-500" %>
      </div>
    <% end %>
  </div>
<% end %>
