<%= page_shell do %>
  <h1 class="text-2xl font-semibold text-gray-900">Routes</h1>
  <%= card classes: "mt-4" do %>
    <%= form_with model: @route, url: routes_path, local: true do |f| %>
      <div class="grid gap-4 md:flex md:items-end">
        <div>
          <%= f.label :route_date, "Route date", class: "text-sm font-medium text-gray-700" %>
          <%= f.date_field :route_date, class: "mt-1 block rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.label :truck_id, "Truck", class: "text-sm font-medium text-gray-700" %>
          <% if @trucks.any? %>
            <%= f.collection_select :truck_id, @trucks, :id, :label, {},
                  class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          <% else %>
            <p class="mt-1 text-xs text-rose-600">Add a truck before scheduling routes.</p>
          <% end %>
        </div>
        <div>
          <%= f.label :trailer_id, "Trailer", class: "text-sm font-medium text-gray-700" %>
          <%= f.collection_select :trailer_id, @trailers, :id, :label,
                { include_blank: "No trailer" },
                class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.submit "Create route", class: button_classes(variant: :secondary), disabled: @trucks.empty? %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= card classes: "mt-6 overflow-hidden" do %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="<%= table_header_class %>">Date</th>
          <th class="<%= table_header_class %>">Events</th>
          <th class="<%= table_header_class %>">Estimated gallons</th>
          <th class="<%= table_header_class %>">Deliveries</th>
          <th class="<%= table_header_class %>">Pickups</th>
          <th class="<%= table_header_class %>">Truck</th>
          <th class="<%= table_header_class %>">Trailer</th>
          <th class="<%= table_header_class('text-right') %>">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 bg-white">
        <% @route_rows.each do |row| %>
          <% route = row.route %>
          <tr>
            <td class="<%= table_cell_class('font-semibold') %>"><%= l(route.route_date) %></td>
            <td class="<%= table_cell_class %>"><%= row.service_event_count %></td>
            <td class="<%= table_cell_class %>"><%= row.estimated_gallons %></td>
            <td class="<%= table_cell_class %>"><%= row.deliveries_count %></td>
            <td class="<%= table_cell_class %>"><%= row.pickups_count %></td>
            <td class="<%= table_cell_class %>"><%= route.truck&.label || "—" %></td>
            <td class="<%= table_cell_class %>"><%= route.trailer&.label || "—" %></td>
            <td class="<%= table_cell_class('', align: :right) %>">
              <% if row.over_capacity? %>
                <% dims = row.over_capacity_dimensions.map { |dim| dim.to_s.humanize.downcase }.join(', ') %>
                <%= badge("Over capacity (#{dims})", tone: :danger) %>
              <% end %>
              <%= link_to "View", route_path(route), class: "ml-2 text-sm font-semibold text-emerald-600 hover:text-emerald-500" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
