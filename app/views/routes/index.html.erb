<div class="mx-auto max-w-4xl px-4 py-8">
  <h1 class="text-2xl font-semibold text-gray-900">Routes</h1>
  <div class="mt-4 rounded-2xl bg-white p-4 shadow-sm ring-1 ring-gray-200">
    <%= form_with model: @route, url: routes_path, local: true do |f| %>
      <div class="grid gap-4 md:flex md:items-end">
        <div>
          <%= f.label :route_date, "Route date", class: "text-sm font-medium text-gray-700" %>
          <%= f.date_field :route_date, class: "mt-1 block rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.label :truck_id, "Truck", class: "text-sm font-medium text-gray-700" %>
          <% if @trucks.any? %>
            <%= f.collection_select :truck_id, @trucks, :id, :label, {},
                  class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          <% else %>
            <p class="mt-1 text-xs text-rose-600">Add a truck before scheduling routes.</p>
          <% end %>
        </div>
        <div>
          <%= f.label :trailer_id, "Trailer", class: "text-sm font-medium text-gray-700" %>
          <%= f.collection_select :trailer_id, @trailers, :id, :label,
                { include_blank: "No trailer" },
                class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.submit "Create route", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800", disabled: @trucks.empty? %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6 overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-200">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Date</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Events</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Estimated gallons</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Deliveries</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Pickups</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Truck</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Trailer</th>
          <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 bg-white">
        <% @routes.each do |route| %>
          <tr>
            <td class="px-4 py-3 text-sm font-semibold text-gray-900"><%= l(route.route_date) %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.service_event_count %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.estimated_gallons %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.deliveries_count %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.pickups_count %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.truck&.label || "—" %></td>
            <td class="px-4 py-3 text-sm text-gray-900"><%= route.trailer&.label || "—" %></td>
            <td class="px-4 py-3 text-right text-sm">
              <% if route.over_capacity? %>
                <% dims = route.over_capacity_dimensions.map { |dim| dim.to_s.humanize.downcase }.join(', ') %>
                <span class="mr-2 inline-flex items-center rounded-full bg-rose-50 px-3 py-1 text-xs font-semibold text-rose-700">
                  Over capacity (<%= dims %>)
                </span>
              <% end %>
              <%= link_to "View", route_path(route), class: "text-sm font-semibold text-emerald-600 hover:text-emerald-500" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
