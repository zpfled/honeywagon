<%= page_shell do %>
  <%= card classes: "mt-4 px-4 py-3" do %>
    <div class="flex flex-wrap items-center gap-6">
      <div class="min-w-[180px]">
        <p class="text-xs font-semibold uppercase tracking-wide text-gray-500">YTD revenue</p>
        <p class="mt-1 text-2xl font-semibold text-gray-900">
          <%= number_to_currency(@ytd_order_total_cents.to_i / 100.0) %>
        </p>
        <p class="text-xs text-gray-500">As of <%= l(Date.current, format: :long) %></p>
      </div>
      <div class="flex-1 overflow-x-auto">
        <% if @inventory_stats.any? %>
          <div class="flex flex-wrap gap-3 text-sm">
            <% @inventory_stats.each do |row| %>
              <div class="rounded-2xl border border-gray-200 bg-white px-4 py-3 shadow-sm min-w-[180px]">
                <p class="text-xs font-medium text-gray-500"><%= row[:unit_type].name %></p>
                <p class="text-base font-semibold text-gray-900">
                  <%= row[:available_units] %> available
                </p>
                <p class="text-xs text-gray-500">
                  <span class="text-gray-900"><%= row[:rented_units] %></span> rented •
                  <span class="text-gray-900"><%= row[:total_units] %></span> total
                </p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-600">No unit types defined yet.</p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="mt-6" data-controller="toggle">
    <div class="flex flex-wrap items-center gap-3">
      <div class="min-w-0">
        <h1 class="truncate text-xl font-semibold text-gray-900">Upcoming routes</h1>
        <p class="text-sm text-gray-600">
          Next 4 weeks • <%= pluralize(@routes.size, "route") %>
        </p>
      </div>
      <button
        type="button"
        class="<%= button_classes(variant: :secondary) %> ml-auto"
        data-action="toggle#toggle">
        New route
      </button>
    </div>
    <div class="mt-3 hidden rounded-2xl border border-gray-200 bg-white px-4 py-3 shadow-sm" data-toggle-target="content">
      <%= form_with model: @new_route, url: routes_path, class: "grid gap-3 sm:flex sm:items-end", local: true do |f| %>
        <div>
          <%= f.label :route_date, "Route date", class: "text-xs font-medium text-gray-700" %>
          <%= f.date_field :route_date, class: "mt-1 block rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.label :truck_id, "Truck", class: "text-xs font-medium text-gray-700" %>
          <% if @trucks.any? %>
            <%= f.collection_select :truck_id, @trucks, :id, :label, {},
                  class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          <% else %>
            <p class="mt-1 text-xs text-rose-600">Add a truck before creating routes.</p>
          <% end %>
        </div>
        <div>
          <%= f.label :trailer_id, "Trailer", class: "text-xs font-medium text-gray-700" %>
          <%= f.collection_select :trailer_id, @trailers, :id, :label,
                { include_blank: "No trailer" },
                class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.submit "Create", class: button_classes(variant: :primary), disabled: @trucks.empty? %>
        </div>
      <% end %>
    </div>
  </div>

  <%= card classes: "mt-6 overflow-hidden" do %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="<%= table_header_class %>">Date</th>
          <th class="<%= table_header_class %>">Workload</th>
          <th class="<%= table_header_class('text-right') %>">Est. gallons</th>
          <th class="<%= table_header_class %>">Truck • Trailer</th>
          <th class="<%= table_header_class %>">Alerts</th>
          <th class="<%= table_header_class('text-right') %>">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% if @dashboard_rows&.any? %>
          <% @dashboard_rows.each_with_index do |row, idx| %>
            <% route = row.route %>
            <% base_background = row.row_background_class.presence || (idx.even? ? 'bg-white' : 'bg-gray-50') %>
            <tr class="<%= class_names(base_background, 'hover:bg-gray-50 transition') %>">
              <td class="<%= table_cell_class('font-semibold') %>">
                <div><%= l(route.route_date, format: :long) %></div>
                <div class="text-xs text-gray-500"><%= l(route.route_date, format: '%A') %></div>
                <% if row.trend_badge %>
                  <div class="mt-1 text-xs text-gray-600">
                    <%= badge(row.trend_badge[:text], tone: row.trend_badge[:tone]) %>
                  </div>
                <% end %>
                <% if row.weather_forecast %>
                  <div class="mt-1 text-xs text-gray-600 space-y-0.5">
                    <div class="flex items-center gap-2">
                      <% if row.weather_forecast.high_temp.present? %>
                        <span class="<%= freeze_risk_class(row.weather_forecast.high_temp) %>">H <%= row.weather_forecast.high_temp %>°F</span>
                      <% end %>
                      <% if row.weather_forecast.low_temp.present? %>
                        <span class="<%= freeze_risk_class(row.weather_forecast.low_temp) %>">L <%= row.weather_forecast.low_temp %>°F</span>
                      <% end %>
                      <% if row.weather_forecast.precip_percent.present? %>
                        <span><%= row.weather_forecast.precip_percent %>% precip</span>
                      <% end %>
                    </div>
                    <% if row.weather_forecast.summary.present? %>
                      <div><%= row.weather_forecast.summary %></div>
                    <% end %>
                  </div>
                <% end %>
              </td>
              <td class="<%= table_cell_class %>">
                <div class="text-sm font-semibold text-gray-900 space-y-1">
                  <div>Deliveries: <%= pluralize(row.deliveries_count, 'unit') %></div>
                  <div>Services: <%= pluralize(row.services_count, 'unit') %></div>
                  <div>Pickups: <%= pluralize(row.pickups_count, 'unit') %></div>
                  <% if row.orders_summary.any? %>
                    <div class="mt-2 text-xs text-gray-600">
                      <% row.orders_summary.each do |summary| %>
                        <div>
                          <%= summary[:dump] ? "Dump: #{summary[:label]}" : summary[:label] %>
                          <% if summary[:dump] %>
                            <% if summary[:detail].present? %>
                              — <%= summary[:detail] %>
                            <% end %>
                          <% else %>
                            — <%= summary[:units] %> units
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <% if row.labeled_badges.any? %>
                  <div class="mt-1 flex flex-wrap gap-1 text-xs text-gray-600">
                    <% row.labeled_badges.each do |badge_info| %>
                      <%= badge(badge_info[:text], tone: badge_info[:tone]) %>
                    <% end %>
                  </div>
                <% end %>
                <% cadence = row.cadence_info %>
                <div class="mt-1 text-xs text-gray-600">
                  <% if cadence[:last_completed_on] %>
                    Last serviced <%= time_ago_in_words(cadence[:last_completed_on]) %> ago
                  <% else %>
                    No completed services yet
                  <% end %>
                  <% if cadence[:next_due_on] %>
                    • Next due <%= l(cadence[:next_due_on], format: :long) %>
                  <% end %>
                </div>
              </td>
              <td class="<%= table_cell_class('', align: :right) %>"><%= row.estimated_gallons %></td>
              <td class="<%= table_cell_class %>">
                <div class="text-sm font-semibold text-gray-900 whitespace-nowrap">
                  <%= route.truck&.name || "—" %>
                </div>
                <div class="text-xs text-gray-500 whitespace-nowrap">
                  <%= route.trailer&.name || "No trailer" %>
                </div>
                <% if row.capacity_icons.any? %>
                  <div class="mt-2 flex gap-1">
                    <% row.capacity_icons.each do |icon| %>
                      <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-white ring-1 ring-gray-200 text-base <%= icon[:tone] %>"
                            title="<%= icon[:title] %>">
                        <%= icon[:glyph] %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
                <% if row.waste_load_summary %>
                  <% summary = row.waste_load_summary %>
                  <div class="mt-2 text-xs whitespace-nowrap <%= summary[:over_capacity] ? 'text-rose-600' : 'text-gray-600' %>">
                    Waste <%= summary[:cumulative_used] %>/<%= summary[:capacity] || '—' %> gal
                  </div>
                <% end %>
              </td>
              <td class="<%= table_cell_class %>">
                <div class="flex flex-wrap gap-1">
                  <% row.alert_badges.each do |badge_info| %>
                    <%= badge(badge_info[:text], tone: badge_info[:tone]) %>
                  <% end %>
                </div>
              </td>
              <td class="<%= table_cell_class('', align: :right) %>">
                <%= link_to "View route", route_path(route), class: "#{button_classes size: :sm} whitespace-nowrap" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="<%= table_cell_class('text-center', tone: :muted) %>">
              No routes scheduled for the upcoming week.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
