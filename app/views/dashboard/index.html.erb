<%= page_shell do %>
  <%= card classes: "mt-6 overflow-hidden" do %>
    <div class="border-b border-gray-200 px-4 py-3">
      <h2 class="text-base font-semibold text-gray-900">Operational overview</h2>
      <p class="text-sm text-gray-600">Year-to-date revenue and live inventory snapshot.</p>
    </div>
    <div class="grid gap-6 p-4 lg:grid-cols-4">
      <%= card variant: :muted do %>
        <p class="text-sm font-medium text-gray-600">Order revenue (YTD)</p>
        <p class="mt-2 text-2xl font-semibold text-gray-900">
          <%= number_to_currency(@ytd_order_total_cents.to_i / 100.0) %>
        </p>
        <p class="mt-1 text-xs text-gray-500">Start of year → <%= l(Date.current) %></p>
      <% end %>
      <div class="lg:col-span-3 overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="<%= table_header_class %>">Unit type</th>
              <th class="<%= table_header_class('text-right') %>">Total units</th>
              <th class="<%= table_header_class('text-right') %>">Available</th>
              <th class="<%= table_header_class('text-right') %>">Rented</th>
              <th class="<%= table_header_class('text-right') %>">Monthly rentals</th>
              <th class="<%= table_header_class('text-right') %>">Event rentals</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 bg-white">
            <% if @inventory_stats.any? %>
              <% @inventory_stats.each do |row| %>
                <tr>
                  <td class="<%= table_cell_class('font-medium') %>">
                    <%= row[:unit_type].name %>
                  </td>
                  <td class="<%= table_cell_class('', align: :right) %>"><%= row[:total_units] %></td>
                  <td class="<%= table_cell_class('', align: :right, tone: :success) %>"><%= row[:available_units] %></td>
                  <td class="<%= table_cell_class('', align: :right, tone: :danger) %>"><%= row[:rented_units] %></td>
                  <td class="<%= table_cell_class('', align: :right, tone: :info) %>"><%= row[:monthly_out] %></td>
                  <td class="<%= table_cell_class('', align: :right, tone: :info) %>"><%= row[:event_out] %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="<%= table_cell_class('text-center', tone: :muted) %>">
                  No unit types defined yet.
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <div class="mt-8 flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
    <div class="min-w-0">
      <h1 class="truncate text-2xl font-semibold text-gray-900">Upcoming Routes</h1>
      <p class="mt-1 text-sm text-gray-600">
        Next 7 days • <%= pluralize(@routes.size, "route") %>
      </p>
    </div>
    <%= card do %>
      <%= form_with model: @new_route, url: routes_path, class: "grid gap-3 sm:flex sm:items-end", local: true do |f| %>
        <div>
          <%= f.label :route_date, "Route date", class: "text-xs font-medium text-gray-700" %>
          <%= f.date_field :route_date, class: "mt-1 block rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.label :truck_id, "Truck", class: "text-xs font-medium text-gray-700" %>
          <% if @trucks.any? %>
            <%= f.collection_select :truck_id, @trucks, :id, :label, {},
                  class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
          <% else %>
            <p class="mt-1 text-xs text-rose-600">Add a truck before creating routes.</p>
          <% end %>
        </div>
        <div>
          <%= f.label :trailer_id, "Trailer", class: "text-xs font-medium text-gray-700" %>
          <%= f.collection_select :trailer_id, @trailers, :id, :label,
                { include_blank: "No trailer" },
                class: "mt-1 block w-48 rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-900 shadow-sm focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20" %>
        </div>
        <div>
          <%= f.submit "Create", class: button_classes(variant: :secondary), disabled: @trucks.empty? %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= card classes: "mt-6 overflow-hidden" do %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Date</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Service events</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Estimated gallons</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Deliveries</th>
          <th class="<%= table_header_class %>">Pickups</th>
          <th class="<%= table_header_class %>">Truck • Trailer</th>
          <th class="<%= table_header_class('text-right') %>">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 bg-white">
        <% if @routes.any? %>
          <% @routes.each do |route| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-sm font-semibold text-gray-900"><%= l(route.route_date, format: :long) %></td>
              <td class="px-4 py-3 text-sm text-gray-900"><%= route.service_event_count %></td>
              <td class="<%= table_cell_class %>"><%= route.estimated_gallons %></td>
              <td class="<%= table_cell_class %>"><%= route.deliveries_count %></td>
              <td class="<%= table_cell_class %>"><%= route.pickups_count %></td>
              <td class="<%= table_cell_class %>">
                <div><%= route.truck&.label || "—" %></div>
                <div class="text-xs text-gray-500"><%= route.trailer&.label || "No trailer" %></div>
              </td>
              <td class="<%= table_cell_class('', align: :right) %>">
                <% if route.over_capacity? %>
                  <% dims = route.over_capacity_dimensions.map { |dim| dim.to_s.humanize.downcase }.join(', ') %>
                  <%= badge("Over capacity (#{dims})", tone: :danger) %>
                <% end %>
                <%= link_to "View route", route_path(route), class: "#{button_classes size: :sm}" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="<%= table_cell_class('text-center', tone: :muted) %>">
              No routes scheduled for the upcoming week.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
