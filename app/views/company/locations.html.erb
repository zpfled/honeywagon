<%= page_shell do %>
  <div class="flex flex-wrap items-center justify-between gap-4">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Locations</h1>
      <p class="mt-1 text-sm text-gray-600">Review and fix job site details for routing.</p>
    </div>
    <%= link_to "Back to company profile", edit_company_path, class: button_classes(variant: :outline, size: :sm) %>
  </div>

  <div class="mt-6">
    <%= card do %>
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Customer locations</h2>
        <span class="text-sm text-gray-500"><%= pluralize(@locations.size, "location") %></span>
      </div>
      <div class="mt-3 overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
          <thead class="bg-gray-50">
            <tr>
              <th class="<%= table_header_class %>">Customer</th>
              <th class="<%= table_header_class %>">Location</th>
              <th class="<%= table_header_class %>">Address</th>
              <th class="<%= table_header_class %>">Coordinates</th>
              <th class="<%= table_header_class %>">Status</th>
              <th class="<%= table_header_class('text-right') %>">Action</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% if @locations.any? %>
              <% @locations.each do |location| %>
                <%= render "locations/row", location: location %>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="<%= table_cell_class('text-center', tone: :muted) %>">No locations yet.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>

  <turbo-frame id="location_modal"></turbo-frame>
<% end %>
