<turbo-frame id="expense_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900/60 px-4 py-6" data-controller="modal" data-action="keyup@window->modal#maybeClose">
    <div class="absolute inset-0" data-action="click->modal#close"></div>
    <div class="relative z-10 w-full max-w-3xl rounded-2xl bg-white p-6 shadow-xl">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Add expense</h2>
          <p class="text-sm text-gray-600">Track recurring costs that impact route profitability.</p>
        </div>
        <button class="text-gray-400 hover:text-gray-700" data-action="click->modal#close">âœ•</button>
      </div>
      <%= form_with model: @expense, url: company_path, method: :put, local: true, class: "mt-6 space-y-4" do |f| %>
        <%= hidden_field_tag :redirect_to, params[:redirect_to] if params[:redirect_to].present? %>
        <% if @expense.errors.any? %>
          <div class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= @expense.errors.full_messages.to_sentence %></div>
        <% end %>
        <div class="grid gap-3 md:grid-cols-2">
          <div>
            <%= f.label :name, class: "text-xs font-medium text-gray-600" %>
            <%= f.text_field :name, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :category, class: "text-xs font-medium text-gray-600" %>
            <%= f.select :category, expense_category_options, { include_blank: "Select" }, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :cost_type, class: "text-xs font-medium text-gray-600" %>
            <%= f.select :cost_type, expense_type_options, { include_blank: "Select" }, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :base_amount, "Base amount (USD)", class: "text-xs font-medium text-gray-600" %>
            <%= f.number_field :base_amount, step: "0.01", min: 0, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :package_size, class: "text-xs font-medium text-gray-600" %>
            <%= f.number_field :package_size, step: "0.001", min: 0, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :unit_label, class: "text-xs font-medium text-gray-600" %>
            <%= f.text_field :unit_label, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
        </div>
        <div>
          <span class="text-xs font-medium text-gray-600">Applies to</span>
          <div class="mt-2 flex flex-wrap gap-3 text-sm text-gray-700">
            <% expense_applies_options.each do |label, value| %>
              <label class="inline-flex items-center gap-1 rounded-full border border-gray-300 px-2 py-1">
                <%= check_box_tag "expense[applies_to][]", value, false, class: "rounded border-gray-300 text-emerald-600 focus:ring-emerald-600" %>
                <span class="text-xs font-medium text-gray-700"><%= label %></span>
              </label>
            <% end %>
          </div>
        </div>
        <div class="grid gap-3 md:grid-cols-2">
          <div>
            <%= f.label :season_start, class: "text-xs font-medium text-gray-600" %>
            <%= f.date_field :season_start, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :season_end, class: "text-xs font-medium text-gray-600" %>
            <%= f.date_field :season_end, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
        </div>
        <div>
          <%= f.label :description, class: "text-xs font-medium text-gray-600" %>
          <%= f.text_area :description, rows: 2, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>
        <div class="flex items-center gap-2">
          <%= f.check_box :active, checked: true, class: "rounded border-gray-300 text-emerald-600 focus:ring-emerald-600" %>
          <%= f.label :active, "Active", class: "text-xs font-medium text-gray-700" %>
        </div>
        <div class="flex justify-end gap-3 pt-2">
          <button type="button" class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" data-action="click->modal#close">Cancel</button>
          <%= f.submit "Save expense", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
