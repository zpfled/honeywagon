<turbo-frame id="rate_plan_modal">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900/60 px-4 py-6" data-controller="modal" data-action="keyup@window->modal#maybeClose">
    <div class="absolute inset-0" data-action="click->modal#close"></div>
    <div class="relative z-10 w-full max-w-2xl rounded-2xl bg-white p-6 shadow-xl">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Add rate plan</h2>
          <p class="text-sm text-gray-600">Configure pricing and billing for a service cadence.</p>
        </div>
        <button class="text-gray-400 hover:text-gray-700" data-action="click->modal#close">âœ•</button>
      </div>
      <%= form_with model: @rate_plan, url: company_path, method: :put, local: true, class: "mt-6 space-y-4" do |f| %>
        <% if @rate_plan.errors.any? %>
          <div class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= @rate_plan.errors.full_messages.to_sentence %></div>
        <% end %>
        <div class="grid gap-3 md:grid-cols-2">
          <div>
            <%= f.label :unit_type_id, "Unit type", class: "text-xs font-medium text-gray-600" %>
            <%= f.collection_select :unit_type_id, company.unit_types.order(:name), :id, :name,
              { include_blank: "Service-only" }, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :service_schedule, "Service schedule", class: "text-xs font-medium text-gray-600" %>
            <%= f.select :service_schedule, service_schedule_options, { include_blank: "Select schedule" }, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :billing_period, "Billing period", class: "text-xs font-medium text-gray-600" %>
            <%= f.select :billing_period, billing_period_options, { include_blank: "Select billing" }, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :price_cents, "Price (USD)", class: "text-xs font-medium text-gray-600" %>
            <%= f.number_field :price_cents, step: "0.01", class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :effective_on, "Effective on", class: "text-xs font-medium text-gray-600" %>
            <%= f.date_field :effective_on, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :expires_on, "Expires on", class: "text-xs font-medium text-gray-600" %>
            <%= f.date_field :expires_on, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
        </div>
        <div class="flex justify-end gap-3 pt-2">
          <button type="button" class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" data-action="click->modal#close">Cancel</button>
          <%= f.submit "Save rate plan", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
