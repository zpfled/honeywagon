<turbo-frame id="customer_modal_inline">
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-900/60 px-4 py-6" data-controller="modal" data-action="keyup@window->modal#maybeClose">
    <div class="absolute inset-0" data-action="click->modal#close"></div>
    <div class="relative z-10 w-full max-w-lg rounded-2xl bg-white p-6 shadow-xl">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold text-gray-900">Add customer</h2>
          <p class="text-sm text-gray-600">Capture billing contacts for future orders.</p>
        </div>
        <button class="text-gray-400 hover:text-gray-700" data-action="click->modal#close">âœ•</button>
      </div>
      <%= form_with model: @customer, url: company_path, method: :put, local: true, class: "mt-6 space-y-4" do |f| %>
        <% if @customer.errors.any? %>
          <div class="rounded-lg border border-red-200 bg-red-50 p-3 text-sm text-red-700"><%= @customer.errors.full_messages.to_sentence %></div>
        <% end %>
        <div>
          <%= f.label :business_name, "Business name", class: "text-xs font-medium text-gray-600" %>
          <%= f.text_field :business_name, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>
        <div class="grid gap-3 md:grid-cols-2">
          <div>
            <%= f.label :first_name, class: "text-xs font-medium text-gray-600" %>
            <%= f.text_field :first_name, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
          <div>
            <%= f.label :last_name, class: "text-xs font-medium text-gray-600" %>
            <%= f.text_field :last_name, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
          </div>
        </div>
        <div>
          <%= f.label :billing_email, "Billing email", class: "text-xs font-medium text-gray-600" %>
          <%= f.email_field :billing_email, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>
        <div>
          <%= f.label :phone, class: "text-xs font-medium text-gray-600" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm" %>
        </div>
        <div class="flex justify-end gap-3 pt-2">
          <button type="button" class="inline-flex items-center rounded-lg bg-white px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50" data-action="click->modal#close">Cancel</button>
          <%= f.submit "Save customer", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
